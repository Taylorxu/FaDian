<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/shape_map_popup"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="10dp"
        android:id="@+id/iv_map_marker"
        android:src="@mipmap/mapmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_map_marker"
        style="@style/TitleViewColorSize"
        android:id="@+id/tv_map_marker_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingRight="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_map_marker"
        android:layout_below="@id/tv_map_marker_name"
        style="@style/ContentViewColorSize"
        android:id="@+id/tv_map_marker_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>