<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wisesignsoft.OperationManagement.view.mview.MyTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mt_create_sercice"/>
    <com.wisesignsoft.OperationManagement.view.mview.WorkOrderDetailView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/wodv_create_service"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/home_line"/>
    <Button
        android:id="@+id/bt_commit_service"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textColor="@color/c2"
        android:background="@drawable/shape_round_blue"
        android:text="新建服务报告"/>
</LinearLayout>
