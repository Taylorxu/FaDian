<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.powerge.wise.powerge.otherPages.PlanTasksMag.PlanTasksDailyFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_all_fh"
                    style="@style/style_radio_buttons_no_bg"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="全部" />

                <RadioButton
                    android:id="@+id/btn_1_fh"
                    style="@style/style_radio_buttons_no_bg"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="处理中" />

                <RadioButton
                    android:id="@+id/btn_2_fh"
                    style="@style/style_radio_buttons_no_bg"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="超计划" />

                <RadioButton
                    android:id="@+id/btn_3_fh"
                    style="@style/style_radio_buttons_no_bg"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="已完成" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/color_line" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/content_tasks_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </FrameLayout>
</layout>