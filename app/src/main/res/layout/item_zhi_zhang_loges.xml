<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="textItem"
            type="com.powerge.wise.powerge.bean.SimpleListTextItem" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

            <TextView
                android:id="@+id/announce_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{textItem.title}"
                android:textColor="@color/color_4d"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/announce_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{textItem.formtDate}"
                android:textColor="@color/text_color_jizu_name"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"

                />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/log_title"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="@{textItem.logTitle}"
            android:textColor="@color/color_4d"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_layout" />

        <TextView
            android:id="@+id/announce_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@{textItem.content}"
            android:textColor="@color/text_color_jizu_name"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/log_title" />
    </android.support.constraint.ConstraintLayout>
</layout>