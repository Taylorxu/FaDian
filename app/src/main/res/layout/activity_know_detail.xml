<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_know_detail"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.powerge.wise.powerge.operationProjo.net.view.mview.MyTitle
        android:id="@+id/mt_know_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:textColor="@color/c5"
            android:textSize="15sp"
            android:id="@+id/tv_know_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/c4"
            android:textSize="14sp"
            android:id="@+id/tv_know_detail_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/c4"
            android:textSize="14sp"
            android:id="@+id/tv_know_detail_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="12dp"
            android:background="@color/home_line" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c9" />

    <com.powerge.wise.powerge.operationProjo.net.view.mview.WorkOrderDetailView
        android:id="@+id/wodv_know_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
