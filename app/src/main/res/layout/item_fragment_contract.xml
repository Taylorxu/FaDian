<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <TextView
        android:id="@+id/tv_contract_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:text="总经理办公司"
        android:textColor="@color/c5"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_fragment_contract_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_contract_fragment_name"
        android:src="@mipmap/drop_down" />

    <ImageView
        android:id="@+id/iv_fragment_contract_entity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:paddingLeft="56dp"
        android:paddingRight="6dp"
        android:src="@mipmap/entity" />
</RelativeLayout>