<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/colorPrimary</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/color_319a</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_logo_img</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BaseButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BackButton" parent="BaseButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:src">@drawable/ic_back_drawable</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:onClick">back</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="style_fu_he_top_radios">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/selector_primary_white_btn_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_primary_white_text</item>
    </style>

    <style name="style_huan_bao_line_chart_radios">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/selector_primary_white_btn_bg_border</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_primary_gray_text</item>

    </style>

    <style name="style_radio_buttons_no_bg">
        <item name="android:layout_margin">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_blue_gray_text</item>
    </style>

    <style name="MainTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/selector_color_white_accent</item>
        <item name="android:checked">false</item>
        <!--<item name="android:background">@drawable/selector_color_transparent_bg</item>-->
    </style>

    <style name="fuhe_listview_table_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_jizu_fuhe</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxEms">3</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

    </style>


    <style name="item_fuhe_listview_table_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_673</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="jin_ji_table_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_jizu_fuhe</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

    </style>
    <!-- pupupwindow的弹出和消失动画 -->
    <style name="popup_window_anim">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>


    <style name="AppTheme.AppDate" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!--设置dialog不全屏 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--除去title，如果在代码里面有其他设置会没效果的不过完全没效果-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--<item name="android:windowBackground">@null</item><!–除去背景色–>-->
    </style>

    <style name="TextMarquee">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>

    </style>

</resources>
